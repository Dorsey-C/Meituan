<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC" >

    <ImageView
        android:id="@+id/panic_buying_gridview_item_imageview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        
        
        
        />

    <TextView
        android:id="@+id/panic_buying_gridview_item_shopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/panic_buying_gridview_item_imageview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="鲁西肥牛"
        android:textColor="#745855"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/panic_buying_gridview_item_shopname"
       android:layout_marginBottom="5dp"
        android:background="#FCFCFC"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/panic_buying_gridview_item_pricenow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="20"
            android:textSize="15sp"
             android:textColor="@android:color/holo_orange_dark"/>

        <TextView
            android:id="@+id/panic_buying_gridview_item_oldprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="40"
            android:textSize="10sp"
            android:textColor="#38BBB3" />
    </LinearLayout>

</RelativeLayout>