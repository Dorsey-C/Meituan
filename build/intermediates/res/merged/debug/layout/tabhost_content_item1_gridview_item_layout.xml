<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="#FCFCFC" >

    <LinearLayout
        android:id="@+id/linnearlayout"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
       
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tabhost_contentitem1_gridview_item_textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            
            android:padding="5dp"
            android:text="11元看电影"
            android:textColor="#745855"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tabhost_contentitem1_gridview_item_textexplain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="全名看电影"
            android:textColor="#CCBABA"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/tabhost_contentitem1_gridview_item_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/linnearlayout"
        android:padding="10dp"
        android:scaleType="centerCrop" />

</RelativeLayout>